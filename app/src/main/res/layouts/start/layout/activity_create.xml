<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:fitsSystemWindows="true"

        android:id="@+id/fuck"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.tschess.tschess.start.ActivityStart">

    <LinearLayout

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:id="@+id/ll_main_layout"

            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:gravity="center|top"
            android:background="#000"

            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                android:background="#000"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="33dp"
                android:gravity="center"
                android:textColor="#fff"
                android:paddingTop="33dp"
                android:paddingBottom="33dp"
                android:text="tschess"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="33dp"

                    android:src="@drawable/logo_tsp"
            />

            <ProgressBar
                    android:id="@+id/progress_bar"

                    android:theme="@style/ProgressBarStart"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

        </RelativeLayout>



        <EditText
                android:id="@+id/et_user_name"
                android:hint="username (alphanumeric)"
                android:textColor="#fff"


                android:textSize="16sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"


                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/darker_gray"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_password"
                android:hint="password (six characters minimum)"
                android:textColor="#fff"


                android:textSize="16sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="18dp"


                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/darker_gray"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="25dp"
                android:orientation="horizontal">


            <Button
                    android:id="@+id/btn_create"
                    android:text="let's go!"
                    android:textColor="@android:color/white"
                    android:background="#000"
                    android:textAllCaps="false"

                    android:textSize="16sp"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:id="@+id/bahlsenwitz"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:alpha="0.7"

            android:src="@drawable/bahlsenwitz"

            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"

    />


</androidx.constraintlayout.widget.ConstraintLayout>
